@model IEnumerable<BanSach.Models.agency>

@{
    ViewBag.Title = "Đại Lý";
}

<h2>Đại Lý</h2>

<p>
    @Html.ActionLink("Thêm đại lý", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tên Đại Lý
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            Điện thoại
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.agency_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.agency_address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.agency_phone)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.agency_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.agency_id }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.agency_id })
        </td>
    </tr>
}

</table>
